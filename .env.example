# =============================================================================
# WolfpackCloud Monitoring — Переменные окружения
# =============================================================================
# Скопируйте этот файл в .env и настройте значения:
#   cp .env.example .env
#
# ВАЖНО: В production используйте надёжные пароли и секреты!
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_DB=monitoring
POSTGRES_USER=monitoring
POSTGRES_PASSWORD=change-me-in-production

# -----------------------------------------------------------------------------
# InfluxDB
# -----------------------------------------------------------------------------
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=change-me-in-production
INFLUXDB_ORG=wolfpackcloud
INFLUXDB_BUCKET=robots
# Токен должен быть минимум 32 символа
INFLUXDB_ADMIN_TOKEN=change-me-min-32-characters-token

# -----------------------------------------------------------------------------
# API (FastAPI)
# -----------------------------------------------------------------------------
# Секретный ключ для подписи (минимум 32 символа)
SECRET_KEY=change-me-min-32-characters-secret
# Базовый URL API (для генерации ссылок)
API_BASE_URL=http://localhost:9100
# Время жизни кода привязки (минуты)
PAIR_CODE_EXPIRATION_MINUTES=15

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Секретный ключ для JWT токенов (минимум 32 символа)
JWT_SECRET_KEY=change-me-jwt-secret-key-min-32-chars
# Алгоритм JWT
JWT_ALGORITHM=HS256
# Время жизни access токена (минуты)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
# Время жизни refresh токена (дни)
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Grafana
# -----------------------------------------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
# Root URL (для production с доменом)
GRAFANA_ROOT_URL=http://localhost:9200
# URL для API (внутренний, Docker network)
GRAFANA_URL=http://grafana:3000

# -----------------------------------------------------------------------------
# Superset
# -----------------------------------------------------------------------------
# Секретный ключ Superset (минимум 32 символа)
SUPERSET_SECRET_KEY=change-me-superset-secret-key-min-32
# URL для API (внутренний, Docker network)
SUPERSET_URL=http://superset:8088
# Root URL (для клиента)
SUPERSET_ROOT_URL=http://localhost:9300
# Админ для Superset
SUPERSET_ADMIN_USERNAME=admin
SUPERSET_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Администратор WolfpackCloud
# -----------------------------------------------------------------------------
# Учётные данные администратора (создаётся при первом запуске)
DEFAULT_ADMIN_EMAIL=admin@wolfpackcloud.dev
DEFAULT_ADMIN_PASSWORD=admin
DEFAULT_ADMIN_NAME=Administrator

# -----------------------------------------------------------------------------
# Порты сервисов
# -----------------------------------------------------------------------------
API_PORT=9100
CLIENT_PORT=9101
GRAFANA_PORT=9200
SUPERSET_PORT=9300

# -----------------------------------------------------------------------------
# Для разработки
# -----------------------------------------------------------------------------
DEBUG=false
# RELOAD=true
