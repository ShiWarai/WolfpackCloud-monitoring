# Конфигурация Telegraf для WolfpackCloud Monitoring
# Сгенерировано Ansible для {{ ansible_hostname }}

[global_tags]
  robot = "{{ robot_name }}"
  hostname = "{{ ansible_hostname }}"
  arch = "{{ robot_architecture }}"

[agent]
  interval = "{{ telegraf_interval }}"
  round_interval = true
  metric_batch_size = 1000
  metric_buffer_limit = 10000
  collection_jitter = "0s"
  flush_interval = "{{ telegraf_flush_interval }}"
  flush_jitter = "0s"
  precision = "0s"
  hostname = ""
  omit_hostname = false
  debug = false
  quiet = false

###############################################################################
#                            OUTPUT PLUGINS                                   #
###############################################################################

[[outputs.http]]
  url = "{{ monitoring_server_url }}/api/metrics"
  method = "POST"
  data_format = "influx"
  timeout = "10s"
  content_encoding = "gzip"

  [outputs.http.headers]
    Authorization = "Bearer {{ robot_token }}"
    Content-Type = "text/plain; charset=utf-8"

###############################################################################
#                            INPUT PLUGINS                                    #
###############################################################################

[[inputs.cpu]]
  percpu = true
  totalcpu = true
  collect_cpu_time = false
  report_active = false
  core_tags = false

[[inputs.mem]]

[[inputs.swap]]

[[inputs.disk]]
  ignore_fs = [
    "tmpfs", "devtmpfs", "devfs", "iso9660",
    "overlay", "aufs", "squashfs", "nsfs",
    "fuse.snapfuse", "fuse.lxcfs"
  ]

[[inputs.diskio]]

[[inputs.net]]
  ignore_protocol_stats = true

[[inputs.system]]

[[inputs.processes]]

[[inputs.temp]]

[[inputs.kernel]]

[[inputs.syslog]]
  server = "udp://127.0.0.1:6514"

[[inputs.tail]]
  files = ["/var/log/syslog", "/var/log/messages", "/var/log/auth.log"]
  from_beginning = false
  data_format = "grok"
  grok_patterns = [
    "%{SYSLOGTIMESTAMP:timestamp} %{SYSLOGHOST:logsource} %{PROG:program}(?:\\[%{POSINT:pid}\\])?: %{GREEDYDATA:message}"
  ]
  name_override = "syslog"
  [inputs.tail.tags]
    source = "file"

[[inputs.internal]]
  collect_memstats = false
  [inputs.internal.tags]
    internal = "true"

{% if telegraf_extra_inputs %}
# Дополнительные input плагины
{{ telegraf_extra_inputs }}
{% endif %}
